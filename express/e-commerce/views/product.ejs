<%- include('partials/header', {pageTitle: product.name}); %>

<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #333;
      margin-top: 20px;
    }

    .product-details {
      max-width: 800px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
      color: #333;
      font-size: 2em;
      margin-bottom: 10px;
    }

    p {
      font-size: 1.2em;
      color: #555;
      line-height: 1.6;
    }

    .back-link {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 15px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .back-link:hover {
      background-color: #0056b3;
    }

    .description {
      font-style: italic;
    }
  </style>
</head>

<body>
  <h1>Product Details</h1>

  <% if (product) { %>
    <div class="product-details">
      <h2><%= product.name %></h2>
      <p>Price: $<%= product.price %></p>
      <p>Description: <span class="description"><%= product.description || 'No description available.' %></span></p>
    </div>
  <% } else { %>
    <p>Product not found</p>
  <% } %>

  <a class="back-link" href="/products">Back to Product List</a>
</body>
</html>
